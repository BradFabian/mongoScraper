<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1 id="mainJumbo"> Miami Dolphins News Scraper</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="card" style="background-color: rgb(243, 114, 9);">
                <div class="card-header">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="card-body" style="color:teal; text-shadow: black 0.1em 0.1em 0.2em;">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-info save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="card" style="background-color: rgb(243, 114, 9);">
            <div class="card-body" style="color:teal; text-shadow: black 0.1em 0.1em 0.2em;">
            <h4>Uh Oh. Looks like we don't have any new articles.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>